<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"

    tools:context=".IndexActivity">

    <ImageView
        android:id="@+id/img"
        android:src="@drawable/logo_mafish"
        android:layout_width="200dp"
        android:layout_height="200dp" />

    <TextView
        android:id="@+id/txtindex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SELAMAT DATANG"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/txtdesc"
        android:layout_width="330sp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text=" '' [IKANKU] adalah aplikasi dalam bidang perikanan yang bertujuan untuk memudahkan nelayan dalam melakukan kegiatan transaksi jual beli, selain itu juga nelayan dapat mengetahui info harga ikan dipasar lain, dan masih banyak lagi fitur lainnya. ''"
        android:fontFamily="casual"
        android:textAlignment="center"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btnLanjut"
        android:layout_marginTop="15dp"
        android:layout_width="110sp"
        android:layout_height="55sp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="Lanjut" />


</LinearLayout>